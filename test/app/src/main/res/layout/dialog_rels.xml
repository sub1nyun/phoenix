<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="아이와의 관계를 선택해주세요."
            android:textColor="#000"
            android:textSize="18dp"
            android:textAlignment="center"
            android:fontFamily="@font/aa"
            android:includeFontPadding="false" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginHorizontal="40dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/rels_mom"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/circle_btn"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="2dp"
                android:text="엄마"
                android:fontFamily="@font/aa"
                android:includeFontPadding="false"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/rels_dad"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/circle_btn"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="2dp"
                android:text="아빠"
                android:fontFamily="@font/aa"
                android:includeFontPadding="false"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/rels_sitter"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/circle_btn"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="2dp"
                android:text="시터"
                android:fontFamily="@font/aa"
                android:includeFontPadding="false"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:layout_gravity="center">
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/rels_grmom"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/circle_btn"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="2dp"
                android:text="할머니"
                android:fontFamily="@font/aa"
                android:includeFontPadding="false" />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/rels_grdad"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/circle_btn"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="2dp"
                android:text="할아버지"
                android:fontFamily="@font/aa"
                android:includeFontPadding="false"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/rels_other"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/circle_btn"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="2dp"
                android:text="가족"
                android:fontFamily="@font/aa"
                android:includeFontPadding="false"/>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_marginVertical="20dp"
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/btn_rels"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="확인"
                    android:layout_gravity="center"
                    android:fontFamily="@font/aa"
                    android:includeFontPadding="false"/>
                <Button
                    android:id="@+id/my_close"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="취소"
                    android:layout_gravity="center"
                    android:fontFamily="@font/aa"
                    android:includeFontPadding="false"/>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>