<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".join.GenderFragment"
    android:orientation="vertical"
    android:padding="30dp">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="아이의\n성별을 알고 있나요?"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="30dp"
            >
        </TextView>
    </LinearLayout>




    <LinearLayout
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:id="@+id/linear_man"
            android:layout_width="0dp"
            android:layout_height="130dp"
            android:background="@drawable/border_round_gray"
            android:layout_weight="1"
            android:layout_marginRight="10dp">
            <TextView
                android:id="@+id/tv_man"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:text="남아"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_woman"
            android:layout_width="0dp"
            android:layout_height="130dp"
            android:background="@drawable/border_round_gray"
            android:layout_weight="1"
            android:layout_marginRight="10dp">
            <TextView
                android:id="@+id/tv_woman"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:text="여아"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/linear_random"
            android:layout_width="0dp"
            android:layout_height="130dp"
            android:background="@drawable/border_round_gray"
            android:layout_weight="1"
            android:layout_marginRight="10dp">
            <TextView
                android:id="@+id/tv_random"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:text="아직 모름"
                />
        </LinearLayout>
    </LinearLayout>



</LinearLayout>