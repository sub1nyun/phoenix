<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#E7EFF3">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="8">
        <TextView
            android:fontFamily="@font/aa"
            android:includeFontPadding="false"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="공동 육아"
            android:textColor="#3a539f"
            android:textAlignment="center"
            android:textSize="20dp"
            android:layout_marginTop="30dp"/>

        <ImageView
            android:scaleType="fitXY"
            android:layout_marginTop="50dp"
            android:layout_width="wrap_content"
            android:layout_height="310dp"
            android:src="@drawable/bss_share_home"
            android:layout_gravity="center"/>

        <TextView
            android:fontFamily="@font/aa"
            android:includeFontPadding="false"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="워킹맘도 이제 걱정 끝!\n아빠도 손쉽게 육아 참여해요."
            android:textColor="#000"
            android:textSize="17dp"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:layout_marginTop="70dp"/>

        <TextView
            android:fontFamily="@font/aa"
            android:includeFontPadding="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="엄마, 아빠는 물론, 가족들과 베이비시터도\n함께 육아 기록을 할 수 있습니다."
            android:textColor="#000"
            android:textSize="12dp"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"/>




    </LinearLayout>







</LinearLayout>